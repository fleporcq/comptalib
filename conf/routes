# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET      /                                          controllers.ApplicationController.index
GET      /accounting/:year/:month/:rowType                    controllers.AccountingController.byMonth(rowType, year:Int, month:Int)
GET      /accounting/:year                          controllers.AccountingController.january(year:Int)

GET      /accounting/:year/:month/:rowType/add        controllers.AccountingController.add(rowType, year:Int, month:Int)
POST     /accounting/:year/:month/:rowType/save       controllers.AccountingController.save(rowType, year:Int, month:Int)
POST     /accounting/:year/:month/:rowType/delete     controllers.AccountingController.delete(rowType, year:Int, month:Int)
POST     /accounting/:year/:month/:rowType/edit       controllers.AccountingController.edit(rowType, year:Int, month:Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                               controllers.Assets.at(path="/public", file)
